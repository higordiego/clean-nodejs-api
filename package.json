    "standard": "^14.3.1",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "bcrypt": "^3.0.7",
    "express": "^4.17.3",
    "fast-glob": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.4.1",
    "validator": "^12.1.0"
  }
